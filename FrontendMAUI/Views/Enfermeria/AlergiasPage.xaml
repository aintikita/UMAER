<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontendMAUI.Views.Enfermeria.AlergiasPage"
             BackgroundImageSource="fondo_app.png">
    <VerticalStackLayout Spacing="30" Padding="80" VerticalOptions="FillAndExpand">

        <Label Text="Alergias del paciente"
           FontSize="40"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           TextColor="White" />

        <BoxView BackgroundColor="Transparent" HeightRequest="40" />

        <ScrollView VerticalOptions="FillAndExpand">
            <ListView x:Name="AlergiasListView"
              ItemsSource="{Binding Alergias}"
              HasUnevenRows="True"
              SeparatorVisibility="None"
              BackgroundColor="Transparent"
                      WidthRequest="900"
              HeightRequest="420">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Margin="5"
                           Padding="10"
                           CornerRadius="10"
                           BackgroundColor="#f5f5f5">
                                <VerticalStackLayout Spacing="5">

                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="Alergia:"
                                       FontAttributes="Bold"
                                       FontSize="18" />
                                        <Label Text="{Binding alergia}"
                                       FontSize="18" />
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="DescripciÃ³n:"
                                       FontAttributes="Bold"
                                       FontSize="18" />
                                        <Label Text="{Binding descripcion}"
                                       FontSize="18" />
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                                        <Button Text="Editar"
                                        Clicked="OnEditarAlergiasClicked"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"
                                        CornerRadius="5"
                                        WidthRequest="70"
                                        HeightRequest="30"/>
                                        <Button Text="Eliminar"
                                        Clicked="OnEliminarAlergiasClicked"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#F44336"
                                        TextColor="White"
                                        CornerRadius="5"
                                        WidthRequest="90"
                                        HeightRequest="30"/>
                                    </HorizontalStackLayout>

                                </VerticalStackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>

        <Button Text="Agregar Alergia"
            BackgroundColor="#5E2CED"
            TextColor="White"
            CornerRadius="10"
            HeightRequest="50"
            WidthRequest="500"
            Clicked="OnAgregarAlergiaClicked"
            HorizontalOptions="Fill" />

    </VerticalStackLayout>
</ContentPage>