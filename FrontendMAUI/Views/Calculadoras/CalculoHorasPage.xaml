    El usuario ingresa los par치metros y obtiene el resultado estimado.
-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontendMAUI.Views.Calculadoras.CalculoHorasPage"
             BackgroundImageSource="fondo_app.png">
    <ScrollView>
        <Grid>
            <VerticalStackLayout VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="Center"
                                 Padding="30"
                                 Spacing="20">

                <!-- T칤tulo principal de la calculadora -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" WidthRequest="1000">
                    <Label Text="游 Calculadora de Duraci칩n de Ox칤geno"
                       FontSize="45"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White" />
                </HorizontalStackLayout>

                <!-- Tarjeta visual con los campos de entrada y resultado -->
                <Frame BackgroundColor="White"
                       BorderColor="#DDDDDD"
                       CornerRadius="20"
                       Padding="30"
                       HasShadow="True"
                       WidthRequest="500"
                       MaximumWidthRequest="600">

                    <VerticalStackLayout Spacing="15">

                        <!-- Campo: Litros por botella -->
                        <Frame CornerRadius="10" BorderColor="#FF4081" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                            <Entry x:Name="LitrosBotellaEntry"
                                   Placeholder="Litros por botella"
                                   Keyboard="Numeric" />
                        </Frame>

                        <!-- Campo: N칰mero de botellas -->
                        <Frame CornerRadius="10" BorderColor="#FF4081" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                            <Entry x:Name="NumeroBotellasEntry"
                                   Placeholder="N칰mero de botellas"
                                   Keyboard="Numeric" />
                        </Frame>

                        <!-- Campo: Presi칩n de la botella -->
                        <Frame CornerRadius="10" BorderColor="#FF4081" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                            <Entry x:Name="PresionBotellaEntry"
                                   Placeholder="Presi칩n de la botella (bar)"
                                   Keyboard="Numeric" />
                        </Frame>

                        <!-- Campo: Consumo de ox칤geno -->
                        <Frame CornerRadius="10" BorderColor="#FF4081" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                            <Entry x:Name="ConsumoOxigenoEntry"
                                   Placeholder="Consumo de ox칤geno (L/min)"
                                   Keyboard="Numeric" />
                        </Frame>

                        <!-- Bot칩n para calcular la duraci칩n -->
                        <Button Text="Calcular"
                                Clicked="OnCalculateButtonClicked"
                                BackgroundColor="#5E2CED"
                                TextColor="White"
                                CornerRadius="10"
                                FontAttributes="Bold"
                                FontSize="16"
                                Padding="15,10" />

                        <!-- Etiqueta para mostrar el resultado -->
                        <Label x:Name="ResultadoLabel"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#333"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>

