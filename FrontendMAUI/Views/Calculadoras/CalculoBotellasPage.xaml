<!--
    P치gina para calcular cu치ntas botellas de ox칤geno se necesitan para un vuelo.
    El usuario ingresa los par치metros y obtiene el resultado estimado.
-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontendMAUI.Views.Calculadoras.CalculoBotellasPage"
             BackgroundImageSource="fondo_app.png">
    <ScrollView>
        <Grid>
            <VerticalStackLayout VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="Center"
                                 Padding="30"
                                 Spacing="-10">

                <!-- T칤tulo principal de la calculadora -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" WidthRequest="1000">
                    <Label Text="游쁴 Calculadora de Consumo de Ox칤geno"
                       FontSize="45"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White"/>
                </HorizontalStackLayout>

                <!-- Espaciador visual -->
                <BoxView BackgroundColor="Transparent" HeightRequest="120"/>

                <!-- Tarjeta visual con los campos de entrada y resultado -->
                <Frame BackgroundColor="White"
                       BorderColor="#DDDDDD"
                       CornerRadius="20"
                       Padding="30"
                       HasShadow="True"
                       WidthRequest="600"
                       MaximumWidthRequest="800">

                    <VerticalStackLayout Spacing="15">

                        <!-- Campo: Horas de vuelo -->
                        <Frame CornerRadius="10" BorderColor="#FF4081" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                            <Entry x:Name="HorasDeVueloEntry"
                                   Placeholder="Horas de vuelo"
                                   Keyboard="Numeric" 
                                   HeightRequest="50"/>
                        </Frame>

                        <!-- Campo: Consumo de ox칤geno (L/min) -->
                        <Frame CornerRadius="10" BorderColor="#FF4081" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                            <Entry x:Name="ConsumoOxigenoEntry"
                                   Placeholder="Consumo de ox칤geno (L/min)"
                                   Keyboard="Numeric" 
                                   HeightRequest="50"/>
                        </Frame>

                        <!-- Campo: Presi칩n de la botella (bar) -->
                        <Frame CornerRadius="10" BorderColor="#FF4081" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                            <Entry x:Name="PresionBotellaEntry"
                                   Placeholder="Presi칩n de la botella (bar)"
                                   Keyboard="Numeric"
                                   HeightRequest="50"/>
                        </Frame>

                        <!-- Campo: Litros de la botella -->
                        <Frame CornerRadius="10" BorderColor="#FF4081" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                            <Entry x:Name="LitrosBotellaEntry"
                                   Placeholder="Litros de la botella"
                                   Keyboard="Numeric" 
                                   HeightRequest="50"/>
                        </Frame>

                        <!-- Bot칩n para calcular el resultado -->
                        <Button Text="Calcular"
                                Clicked="OnCalculateButtonClicked"
                                BackgroundColor="#5E2CED"
                                TextColor="White"
                                CornerRadius="10"
                                FontAttributes="Bold"
                                FontSize="16"
                                Padding="15,10"
                                HeightRequest="50"/>

                        <!-- Etiqueta para mostrar el resultado -->
                        <Label x:Name="ResultadoLabel"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#333"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>

