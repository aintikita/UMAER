<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontendMAUI.Views.Auth.OlvidarContrasenaPage"
             BackgroundColor="#2564af">

    <Grid ColumnDefinitions="*,Auto" Padding="0" ColumnSpacing="100" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

        <!-- Columna izquierda: Imagen -->
        <Image Source="umaer_icon.png" Aspect="AspectFit" WidthRequest="400" HeightRequest="400" />

        <!-- Columna derecha: formulario en tarjeta -->
        <Frame Grid.Column="1"
               BackgroundColor="White"
               Padding="30"
               WidthRequest="350"
               CornerRadius="20"
               HasShadow="True"
               VerticalOptions="Center">

            <VerticalStackLayout Spacing="20">

                <!-- T칤tulo -->
                <Label Text="쯆lvidaste tu contrase침a?"
                       FontSize="22"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       TextColor="Black" />

                <!-- Instrucci칩n -->
                <Label Text="Ingresa tu nombre de usuario y la nueva contrase침a."
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="Gray" />

                <!-- Usuario -->
                <Label Text="Nombre de usuario" />
                <Entry x:Name="UsuarioEntry"
                       Placeholder="Usuario"
                       BackgroundColor="#f2f2f2"
                       TextColor="Black" />

                <!-- Nueva contrase침a -->
                <Label Text="Nueva contrase침a" />
                <Entry x:Name="NuevaContrasenaEntry"
                       Placeholder="Nueva contrase침a"
                       IsPassword="True"
                       BackgroundColor="#f2f2f2"
                       TextColor="Black" />

                <!-- Confirmaci칩n -->
                <Label Text="Confirmar contrase침a" />
                <Entry x:Name="ConfirmarContrasenaEntry"
                       Placeholder="Confirmar contrase침a"
                       IsPassword="True"
                       BackgroundColor="#f2f2f2"
                       TextColor="Black" />

                <!-- Bot칩n de restablecer -->
                <Button Text="游 Restablecer"
                        Clicked="OnRestablecerClicked"
                        BackgroundColor="#6200EE"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"/>

                <!-- Mensaje de error o feedback -->
                <Label x:Name="MensajeLabel" TextColor="Red" HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </Frame>
    </Grid>


</ContentPage>
