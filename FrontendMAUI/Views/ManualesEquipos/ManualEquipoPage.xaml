<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FrontendMAUI.Converters"
             x:Class="FrontendMAUI.Views.ManualesEquipos.ManualEquipoPage"
             BackgroundImageSource="fondo_app.png">

    <Grid Padding="30" RowDefinitions="Auto,*">

        <!-- CABECERA: tÃ­tulo, botones y espaciadores -->
        <VerticalStackLayout VerticalOptions="CenterAndExpand"
                             HorizontalOptions="Center"
                             Padding="30"
                             Spacing="5"
                             WidthRequest="1000"
                             Grid.Row="0">

            <!-- TÃ­tulo y emoji -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" WidthRequest="1000">
                <Label Text="ðŸ› ï¸"
                       FontSize="50"
                       VerticalOptions="Center" />
                <Label Text="MANUALES DE EQUIPOS"
                       FontSize="45"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <BoxView BackgroundColor="Transparent" HeightRequest="90" />

            <!-- Botones de navegaciÃ³n y acciÃ³n -->
            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Margin="0,0,0,10" Padding="0" WidthRequest="1000">

                <!-- BotÃ³n para volver a la carpeta anterior -->
                <Button Text="â¬…ï¸ Volver"
                        x:Name="VolverBtn"
                        Clicked="VolverBtn_Clicked"
                        IsVisible="False"
                        HorizontalOptions="Start"
                        BackgroundColor="#6A4CFF"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="18"
                        Padding="15,5" />

                <!-- Espaciador flexible -->
                <BoxView HorizontalOptions="FillAndExpand" BackgroundColor="Transparent" />

                <!-- BotÃ³n para aÃ±adir un nuevo archivo PDF (solo admin) -->
                <Button Text="âž• AÃ±adir archivo"
                        x:Name="AÃ±adirArchivoBtn"
                        Clicked="AÃ±adirArchivoBtn_Clicked"
                        HorizontalOptions="End"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="18"
                        Padding="15,5" />

                <BoxView HorizontalOptions="FillAndExpand" BackgroundColor="Transparent" />

                <!-- BotÃ³n Crear Carpeta alineado a la derecha junto al botÃ³n AÃ±adir archivo -->
                <Button Text="ðŸ“‚ Crear carpeta"
                    x:Name="CrearCarpetaBtn"
                    Clicked="CrearCarpetaBtn_Clicked"
                    HorizontalOptions="End"
                    BackgroundColor="#cea54a"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="18"
                    Padding="15,5" />

            </HorizontalStackLayout>
        </VerticalStackLayout>

        <ListView x:Name="ListaEquipos"
                              Grid.Row="1"
                      ItemsSource="{Binding}"
                  WidthRequest="950"
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      BackgroundColor="Transparent"
                      ItemTapped="ListaManuales_ItemTapped">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame Padding="15"
                                   Margin="10"
                                   BackgroundColor="#f5f5f5"
                                   BorderColor="#dbdbdb"
                                           WidthRequest="950"
                                   CornerRadius="20"
                                   HasShadow="True">
                                        <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                                            <Label Text="{Binding EsCarpeta, Converter={StaticResource BoolToEmojiConverter}}"
                                           FontSize="50"
                                           HorizontalOptions="Center" />
                                            <Label Text="{Binding Nombre}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="Black"
                                           HorizontalOptions="Center"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2" />
                                        </VerticalStackLayout>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
 
       
    </Grid>

</ContentPage>

